<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="20dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/rowLayout">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="0dp"
            android:text="E-Mail"
            android:textColor="#00FFFFFF"
            android:textColorHighlight="#00FFFFFF"
            android:textColorHint="#00FFFFFF"
            android:textColorLink="#00FFFFFF" />

        <TextView
            android:id="@+id/txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/img_Card"
            android:layout_alignTop="@+id/img_Card"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:onClick="txt_Btn_Pass"
            android:text=""
            android:textColor="#2C731C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!--
        <ImageView
            android:id="@+id/img_Card"
            android:layout_width="72dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="4dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/e_mail" />
!-->

        <ImageView
            android:id="@+id/img_Card"
            android:layout_width="79dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/e_mail" />

        <TextView
            android:id="@+id/txt_row_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txt_Hid_Acc"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="86dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="0dp"
            android:hint="G-mail"
            android:singleLine="true"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_Hid_Acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="86dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="7dp"
            android:layout_toStartOf="@+id/txt_Copy"
            android:hint="Account Name"
            android:singleLine="true"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_Hid_Pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="27dp"
            android:layout_marginLeft="176dp"
            android:layout_marginTop="13dp"
            android:hint="123"
            android:textColor="#00FFFFFF"
            android:textColorHighlight="#00FFFFFF"
            android:textColorHint="#00FFFFFF"
            android:textColorLink="#00FFFFFF"
            android:textSize="20sp" />

        <!--
        <TextView
            android:id="@+id/txt_Copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txt_row_title"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="25dp"
            android:onClick="txt_Btn_Copy"
            android:text="Copy"
            android:textColor="#2C731C"
            android:textSize="20sp"
            android:textStyle="bold" />
!-->

        <TextView
            android:id="@+id/txt_Copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txt_row_title"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="25dp"
            android:onClick="txt_Btn_Copy"
            android:text="Copy\nPassword"
            android:textAlignment="center"
            android:textColor="#2C731C"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>